{
    "manifest_version": 3,
    "name": "Slack Status",
    "description": "Updates your Slack status based on your current tab",
    "version": "1.0",
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "host_permissions": [
        "*://*.slack.com/"
    ],
    "permissions": [
        "background",
        "cookies",
        "scripting",
        "tabs"
    ]
}